@model NLogger.Login.LoginModel
<div class="row">
    <div class="col-xs-12 col-lg-5">
        <form id="frmLogin">
            <div class=" container-fluid">

                <label asp-for="UserName"></label>
                <div class="input-group mb-3">
                    <input asp-for="UserName" type="email" class="form-control" placeholder="Email" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class=" container-fluid">

                <label asp-for="Password"></label>
                <div class="input-group mb-3">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-4">
                <input type="button" id="btnLogin" onclick="LoginUser()" value="Login" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>
@section scripts{
    @await Html.PartialAsync("_ScriptsPartial");
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
