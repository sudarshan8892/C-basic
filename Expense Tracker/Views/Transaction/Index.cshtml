@model IEnumerable<Expense_Tracker.Models.Transcation>

@{
    ViewData["PageTitle"] = "Transaction";

}
<div class="row">
    <div class="col-md-7">
        <p>
            <a asp-action="AddOredit" class="btn btn-primary">Create New</a>
        </p>
        <ejs-grid id="Category" dataSource="@Model" allowPaging=true allowSorting=true>
            <e-grid-pagesettings pagesize="5"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headertext="CategoryId" field="categorywithIcon"></e-grid-column>
                @* <e-grid-column headertext="Note" field="Note"></e-grid-column>*@

                <e-grid-column headertext="Amount" field="amount_symbol"></e-grid-column>

                <e-grid-column headertext="Date" format="MMM-dd-yy" field="Date"></e-grid-column>
                <e-grid-column headertext="Actions" template="#actionTemplate" width="150"></e-grid-column>

            </e-grid-columns>
        </ejs-grid>

    </div>
    <div class="col-md-5">
        <div class="Widget h-100 d-flex justify-content-center align-items-center">
            <i class="fa-solid fa-shapes fa-2xl"></i>
        </div>
    </div>
</div>
<script id="actionTemplate" type="text/x-template">
    <div class="d-flex flex-row justify-content-start">
    <a href="/Transaction/AddOredit/${Id}" class="btn btn-info"><i class="fa-solid fa-pen fa-lg"></i> </a>
     <form action="/Transaction/Delete/${CategoryId}" method="post">
          <button type="submit" class="btn btn-sm btn-link no-a-decoration"
          onclick="return confirm(&quot;Are sure to delete this record?&quot;)">
              <i class="fa-solid fa-trash-can fa-lg text-danger"></i>
          </button>
      </form>
      </div>

</script>

