@model IEnumerable<Expense_Tracker.Models.Category>

@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-md-7">
        <div class="Widget p-5">
            <p>
                <a asp-action="AddOredit" class="btn btn-primary">Create New</a>
            </p>
            <table class="table">
                <thead>
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Icon)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Type)
                        </th>
                        <th>Action</th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Icon)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Type)
                            </td>
                            <td>
                                <a asp-action="AddOredit" class="btn btn-info" asp-route-id="@item.CategoryId">Edit</a>
                                <a asp-action="AddOredit" class="btn btn-info" asp-route-id="@item.CategoryId">Details</a>
                                <a asp-action="AddOredit" class="btn btn-info" asp-route-id="@item.CategoryId">Delete</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-5">
        <div class="Widget h-100 d-flex justify-content-center align-items-center">
            <i class="fa-solid fa-shapes fa-2xl"></i>
        </div>
    </div>
</div>
<script id="columnTemplate" type="text/x-template">
    ${type === "Income" ?
        `<span class="badge bg-success">${type}</span>` :
        `<span class="badge bg-danger">${type}</span>`}
</script>

